# Environment variables for deployment and content sync
# Copy to deployment.env and source before running scripts

# WordPress base URL (no trailing slash)
WP_BASE_URL=https://staging.granderconstruction.com

# Application password credentials OR token
WP_APP_USER=admin
WP_APP_PASSWORD=application-password
# Optional bearer token
# WP_AUTH_TOKEN=

# SSH settings for code deploy
WP_SSH_USER=deploy
WP_SSH_HOST=staging.granderconstruction.com
WP_SSH_PORT=22
WP_PATH=/var/www/html

# Environment label
WP_ENV=staging
